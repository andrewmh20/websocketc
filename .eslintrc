{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  
  "rules": {
    "brace-style": [2, "1tbs"],
    "keyword-spacing": 2,
    "indent": [2, 2],
    "no-alert": 2,
    "no-bitwise": 2,
    "no-console": 0,
    "no-extra-boolean-cast": 0,
    "comma-dangle": 0,
    "no-loop-func": 2,
    "no-multi-spaces": 2,
    "no-underscore-dangle": 0,
    "quote-props": [2, "as-needed"],
    "quotes": [2, "single", "avoid-escape"],
    "space-before-blocks": 2,
    "space-infix-ops": 2,
    "strict": 0

  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ]
  
}
